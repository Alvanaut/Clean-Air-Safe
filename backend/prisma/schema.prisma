  generator client {
    provider = "prisma-client-js"
  }

  datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
  }

  model Company {
    id           String   @id @default(cuid())
    name         String
    reference    String   @unique
    contactEmail String?
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt
    
    users   User[]
    spaces  Space[]
    sensors Sensor[]
    
    @@map("companies")
  }

  model User {
    id        String   @id @default(cuid())
    email     String   @unique
    password  String
    name      String
    role      String   // godmode, company_admin, manager, user
    companyId String
    managerId String?
    phone     String?

    company     Company @relation(fields: [companyId], references: [id])
    manager     User?   @relation("UserHierarchy", fields: [managerId], references: [id])
    subordinates User[] @relation("UserHierarchy")

    sensorsResponsible Sensor[] @relation("SensorResponsible")
    spacesResponsible  Space[]  @relation("SpaceResponsible")
    alerts             Alert[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("users")
  }

  model Space {
    id            String  @id @default(cuid())
    name          String
    companyId     String
    parentSpaceId String?
    path          String
    level         Int     @default(0)
    responsibleId String?

    company     Company  @relation(fields: [companyId], references: [id])
    parent      Space?   @relation("SpaceHierarchy", fields: [parentSpaceId], references: [id])
    children    Space[]  @relation("SpaceHierarchy")
    responsible User?    @relation("SpaceResponsible", fields: [responsibleId], references: [id])

    sensors Sensor[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([companyId, path])
    @@map("spaces")
  }

  model Sensor {
    id                 String  @id @default(cuid())
    deviceId           String  @unique
    serialNumber       String  @unique
    qrCode             String  @unique
    name               String
    companyId          String
    spaceId            String?
    responsibleId      String?
    status             String  @default("active")
    thresholdWarning   Int     @default(800)
    thresholdCritical  Int     @default(1000)
    thresholdEmergency Int     @default(1500)

    company     Company  @relation(fields: [companyId], references: [id])
    space       Space?   @relation(fields: [spaceId], references: [id])
    responsible User?    @relation("SensorResponsible", fields: [responsibleId], references: [id])

    measurements Measurement[]
    alerts       Alert[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([companyId, spaceId])
    @@map("sensors")
  }

  model Measurement {
    id          String   @id @default(cuid())
    sensorId    String
    co2Ppm      Float
    temperature Float?
    humidity    Float?
    timestamp   DateTime
    source      String

    sensor Sensor @relation(fields: [sensorId], references: [id], onDelete: Cascade)

    @@unique([sensorId, timestamp])
    @@index([sensorId, timestamp(sort: Desc)])
    @@map("measurements")
  }

  model Alert {
    id              String    @id @default(cuid())
    sensorId        String
    type            String
    level           String
    value           Float
    threshold       String
    status          String    @default("pending")
    escalationLevel Int       @default(0)
    assignedToId    String?

    sensor     Sensor   @relation(fields: [sensorId], references: [id])
    assignedTo User?    @relation(fields: [assignedToId], references: [id])

    escalationHistory Json[]

    createdAt      DateTime  @default(now())
    acknowledgedAt DateTime?
    resolvedAt     DateTime?

    @@index([status, createdAt])
    @@index([sensorId, status])
    @@map("alerts")
  }