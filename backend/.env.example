# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Database (PostgreSQL + TimescaleDB)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=cleanairsafe
DB_PASSWORD=your_secure_password_here
DB_DATABASE=cleanairsafe_db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key
JWT_REFRESH_EXPIRES_IN=7d

# KSP API (Kheiron Service Platform)
KSP_API_URL=https://api.kheiron-sp.io/v1
KSP_API_USERNAME=your_ksp_username
KSP_API_PASSWORD=your_ksp_password
KSP_SYNC_INTERVAL_SECONDS=30

# Polling & Sync
SENSOR_POLLING_ENABLED=true
SENSOR_POLLING_INTERVAL_MS=30000

# Alerts
ALERT_ESCALATION_DELAY_MINUTES=5
ALERT_DEFAULT_CO2_THRESHOLD=1000

# Email (pour notifications - optionnel)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@cleanairsafe.com

# Logging
LOG_LEVEL=debug
